<!DOCTYPE html>
<html>
  <%- include("../templates/head.ejs") %>
  <body>

    <%- include("../templates/navBar.ejs") %>
    <br/>
    <br/>
    <div class="container">
      <h2><%= customer.firstName %> <%= customer.lastName %></h2>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Membership status: <%= membershipStatus.MembershipAward %></li>
        <li class="list-group-item">Customer ID: <%= customer._id %></li>
        <li class="list-group-item">Email: <%= customer.email %></li>
        <li class="list-group-item">Phone number: <%= customer.phoneNumber %></li>
        <li class="list-group-item">City: <%= customer.city %></li>
        <li class="list-group-item">State: <%= customer.state %></li>
        <li class="list-group-item">Country: <%= customer.country %></li>
      </ul>
    </div>
    <br/>
    <div class="container">
      <h2>Booking History</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Transaction amount</th>
            <th scope="col">Car make</th>
            <th scope="col">Pick up branch</th>
          </tr>
        </thead>
        <tbody>
           <% for (let booking of bookings) { %>
              <tr>
                <th scope="row"><%= booking.bookingID %></th>
                <td><%= booking.bookingStartDate %></td>
                <td><%= booking.bookingEndDate %></td>
                <td>$<%= booking.totalCharge %></td>
                <td><%= booking.make %></td>
                <td><%= booking.branchName %></td>
              </tr>
           <% } %>
        </tbody>
      </table>
    </div>


    <%- include("../templates/footer.ejs") %>
  </body>
</html>